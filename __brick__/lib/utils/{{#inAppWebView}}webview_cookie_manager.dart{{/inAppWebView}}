// Generated by mason - winkk_brick
import 'package:flutter_inappwebview/flutter_inappwebview.dart';
import 'logger.dart';

/// Helper to set cookies for the InAppWebView
class WebViewCookieHelper {
  /// Sets the cookies for the InAppWebView 
  static Future setWebViewCookie(String? value) async {
    final cookieUriWeb = WebUri('example.com');
    final cookieManager = CookieManager.instance();

    // Delete or set the cookie
    if (value == null) {
      await cookieManager.deleteCookie(url: cookieUriWeb, name: 'name todo');
    } else {
      logger.d('Updating cookie for InAppWebViews');
      // Set cookie for the webview
      await cookieManager.setCookie(
        url: cookieUriWeb,
        name: 'name todo',
        value: value,
        domain: cookieUriWeb.host,
        isSecure: true,
        sameSite: HTTPCookieSameSitePolicy.NONE,
      );
    }
  }
}